<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="book">
	<insert id="create" parameterType="bookVO">
		insert into BOOK (name, url, img) values (#{name}, #{url}, #{img})
	</insert>
	<select id="all"  resultType="bookVO" >
		select * from BOOK
	</select>
	<select id="one" parameterType="bookVO" resultType="bookVO">
		select * from BOOK where id = #{id}
	</select>
	<delete id="del"  parameterType="bookVO">
		delete from BOOK  where id = #{id}
	</delete>
	<update id="up">
		update BOOK set name = #{name} where id = #{id}
	</update>
	
	
	
	
	<select id="check2" parameterType="bookVO" resultType="bookVO">
		select id from BOOK where id = #{id}
	</select>
	
</mapper>











