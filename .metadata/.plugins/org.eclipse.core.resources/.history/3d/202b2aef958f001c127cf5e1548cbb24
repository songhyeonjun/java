function idCheck() {
	// id에 입력한 값을 가져고 와서
	// 글자수가 5 미만이면 다시 작성하세요. 메시지 프린트
	// 미리 객체를 생성해 놨음 ==> 내장된 객체
	// window:
	// document:
	// console:
	// location
	idValue = document.getElementById("id").value; // <input name="id" id="id" value="test">
	if(idValue < 5) {
		console.log("5미만 입니다. 다시 입력해주세요");
	}
	else {
		console.log("굳");
	}
}
